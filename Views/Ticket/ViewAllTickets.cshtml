@model PCM.ViewModels.ViewAllTicketsViewModel;
@{
    ViewData["Title"] = "ViewAllTickets";
}

@section Styles {
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

}

<h1>View All Tickets</h1>
<table id="ticketsTable">
    <thead>
        <tr>
            <th>Ticket Key</th>
            <th>Created At</th>
            <th>Summary</th>
            <th>Priority</th>
            <th>Collection</th>
        
            <th>Status</th>
            <th>Link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.CreatedAt</td>
                <td>@ticket.Summary</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Collection</td>

                


                <td>@ticket.Status.ToString()</td>

                <td>
                    <a href="@ticket.Link" class="btn btn-info" target="_blank">Go to Jira Issue Link</a>


                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <!-- DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/2.1.3/js/dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ticketsTable').DataTable(
                {
                    "order": [[1, "desc"]]
                }
            );
        });
    </script>
}


