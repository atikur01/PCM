@model IEnumerable<Item>
@{
    ViewData["Title"] = "SearchByTagName";
}

<div class="container mt-5">
    <h2 class="mb-4">Search Results</h2>

    <div class="row">

        @if (Model == null)
        {
            <div class="col">
                <p>No items found.</p>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/Item/Details?id=@item.ItemId" class="text-decoration-none">@item.Name</a>
                            </h5>
                            <p class="card-text">
                                Collection: <a href="/Collection/CollectionDetails/@item.CollectionId" class="text-decoration-none">@item.CollectionName</a>
                            </p>
                            <p class="card-text">Author: @item.Author</p>
                        </div>
                    </div>
                </div>
            }
        }


       
    </div>
</div>

