@model Collection

<h1>Create Collection</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="1">Books</option>
            <option value="2">Signs</option>
            <option value="3">Silverware</option>
            <option value="4">Other</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <h3>Custom Fields</h3>
    <div id="custom-fields">
        <!-- Custom fields will be appended here -->
    </div>

    <button type="button" id="add-field-button" class="btn btn-primary">Add Custom Field</button>
    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <script>
        document.getElementById('add-field-button').addEventListener('click', function () {
            var customFieldsDiv = document.getElementById('custom-fields');

            var fieldWrapper = document.createElement('div');
            fieldWrapper.className = 'form-group custom-field-wrapper';
            fieldWrapper.style.display = 'flex';
            fieldWrapper.style.alignItems = 'center';
            fieldWrapper.style.marginBottom = '10px';

            var fieldNameInput = document.createElement('input');
            fieldNameInput.placeholder = 'Enter Field name';
            fieldNameInput.className = 'form-control';
            fieldNameInput.style.marginRight = '10px';

            var fieldTypeSelect = document.createElement('select');
            fieldTypeSelect.className = 'form-control';
            fieldTypeSelect.style.marginRight = '10px';

            var optionTypes = ['String', 'Integer', 'MultilineText', 'Boolean', 'Date'];
            optionTypes.forEach(function (type) {
                var option = document.createElement('option');
                option.value = type;
                option.text = type;
                fieldTypeSelect.appendChild(option);
            });

            var deleteButton = document.createElement('button');
            deleteButton.textContent = 'Delete';
            deleteButton.className = 'btn btn-danger';
            deleteButton.style.marginRight = '10px';
            deleteButton.type = 'button';
            deleteButton.addEventListener('click', function () {
                customFieldsDiv.removeChild(fieldWrapper);
            });

            var hiddenFieldTypeInput = document.createElement('input');
            hiddenFieldTypeInput.type = 'hidden';
            hiddenFieldTypeInput.name = 'CustomFieldTypes[]';

            var hiddenFieldNameInput = document.createElement('input');
            hiddenFieldNameInput.type = 'hidden';
            hiddenFieldNameInput.name = 'CustomFieldNames[]';

            fieldWrapper.appendChild(fieldNameInput);
            fieldWrapper.appendChild(fieldTypeSelect);
            fieldWrapper.appendChild(deleteButton);
            fieldWrapper.appendChild(hiddenFieldTypeInput);
            fieldWrapper.appendChild(hiddenFieldNameInput);

            customFieldsDiv.appendChild(fieldWrapper);

            fieldNameInput.addEventListener('input', function () {
                hiddenFieldNameInput.value = fieldNameInput.value;
            });

            fieldTypeSelect.addEventListener('change', function () {
                hiddenFieldTypeInput.value = fieldTypeSelect.value;
            });
        });
    </script>
}