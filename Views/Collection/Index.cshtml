@model IEnumerable<PCM.Models.Collection>

<h2>Collections</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Collection</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model)
        {
            <tr>
                <td>@collection.Name</td>
                <td>@collection.Description</td>
                <td>
                    <a href="@Url.Action("Details", new { id = collection.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", new { id = collection.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = collection.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
