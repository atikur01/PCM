@model PCM.ViewModels.SalesforceViewModel
@{
    ViewData["Title"] = "Create Salesforce Account/Contact";
}

<div class="container mt-5">
    <h2>Create Salesforce Account/Contact</h2>
    <br />
    <form asp-action="CreateSalesforceAccount" asp-controller="Collection" method="post">
        <div class="form-group">
            <label asp-for="AccountName"></label>
            <input asp-for="AccountName" class="form-control" value="PCM.WEB" readonly />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

