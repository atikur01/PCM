@model PCM.Models.Collection

<h2>Collection Details</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <!-- Display custom fields here -->
</table>

<h3>Items</h3>
<a href="@Url.Action("Create", "Item", new { collectionId = Model.Id })" class="btn btn-primary">Add Item</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@string.Join(", ", new[] { item.Tag1, item.Tag2, item.Tag3, item.Tag4, item.Tag5 }.Where(t => !string.IsNullOrEmpty(t)))</td>
                <td>
                    <a href="@Url.Action("Edit", "Item", new { id = item.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Item", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
