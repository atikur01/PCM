@{
    ViewData["Title"] = "Home Page";
}

 <div class="container mt-4">
    <!-- Latest Items Section -->
    <div class="mb-5">
      <h2>Latest Items</h2>
      <div class="row">
        <!-- Example Item -->
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="path/to/item-image.jpg" class="card-img-top" alt="Item Image">
            <div class="card-body">
              <h5 class="card-title">Item Title</h5>
              <p class="card-text">Brief description or snippet...</p>
              <a href="/items/1" class="btn btn-primary">View Item</a>
            </div>
          </div>
        </div>
        <!-- More items dynamically generated -->
      </div>
    </div>

    <!-- Top 5 Largest Collections Section -->
    <div class="mb-5">
      <h2>Top 5 Largest Collections</h2>
      <ul class="list-group">
        <!-- Example Collection -->
        <li class="list-group-item">
          <h5 class="mb-1">Collection Name</h5>
          <small>Number of Items: 123</small>
          <p class="mb-1">Brief description of the collection...</p>
          <a href="/collections/1" class="btn btn-secondary">View Collection</a>
        </li>
        <!-- More collections dynamically generated -->
      </ul>
    </div>

    <!-- Tag Cloud Section -->
    <div class="mb-5">
      <h2>Tag Cloud</h2>
      <div class="d-flex flex-wrap">
        <!-- Example Tag -->
        <a href="/tags/tag1" class="badge badge-primary m-1" style="font-size: 1.2em;">Tag1</a>
        <a href="/tags/tag2" class="badge badge-secondary m-1" style="font-size: 1em;">Tag2</a>
        <a href="/tags/tag3" class="badge badge-success m-1" style="font-size: 1.5em;">Tag3</a>
        <!-- More tags dynamically generated -->
      </div>
    </div>
  </div>